# Database (MongoDB)
# Local MongoDB: mongodb://localhost:27017/telegram_clone
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/telegram_clone
DATABASE_URL="mongodb://localhost:27017/telegram_clone"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN="http://localhost:5173"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"
